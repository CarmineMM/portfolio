---
import type PageSections from '@/interfaces/PageSections'
import _ from 'lodash'
import { __ } from '@config/i18n'

interface Props extends PageSections {
    classList?: string
}

const { lang, classList = 'mb-12' } = Astro.props as Props
---

<article class={classList}>
    {
        _.map(__('about-paragraphs', { lng: lang, returnObjects: true }), (paragraph: string) => (
            <p set:html={paragraph} />
        ))
    }
</article>
